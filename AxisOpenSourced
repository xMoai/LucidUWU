-- Lucid Anti Aim --
-- Lucid.Lua Anti-Aim --
repeat
    wait()
until game:IsLoaded()
game:GetService("StarterGui"):SetCore("SendNotification",{
            Title = "Lucid.Lua Anti-Aim", -- Required
            Text = "Welcome To The Lucid.Lua Expereince!", -- Required
        })
    task.wait()
        if FLUXUS_LOADED and isfluxusfunction and is_fluxus_function and isfluxusclosure and fluxus and Fluxus and is_fluxus_closure then
            game:GetService("StarterGui"):SetCore("SendNotification",{
                Title = "EXPLOIT - FLUXUS", -- Required
                Text = "Fluxus Detected", -- Required
            })
        elseif KRNL_LOADED then
            game:GetService("StarterGui"):SetCore("SendNotification",{
                Title = "EXPLOIT - Krnl", -- Required
                Text = "Krnl Detected", -- Required
            })
        elseif syn then
            game:GetService("StarterGui"):SetCore("SendNotification",{
                Title = "EXPLOIT - Synapse X", -- Required
                Text = "Synapse Detected", -- Required
            })
        else
            game:GetService("StarterGui"):SetCore("SendNotification",{
                Title = "Unknown Exploit", -- Required
                Text = "Your Exploit is not registered, This may be not safe.", -- Required
            })
        end

game:GetService("RunService").Heartbeat:Connect(function()
        if getgenv().toggle then
                local vel = game.Players.LocalPlayer.Character.HumanoidRootPart.Velocity
                game.Players.LocalPlayer.Character.HumanoidRootPart.Velocity = Vector3.new(getgenv().X, getgenv().Y, getgenv().Z)
                game:GetService("RunService").RenderStepped:Wait()
                game.Players.LocalPlayer.Character.HumanoidRootPart.Velocity = vel
        end
end)

game:GetService("Players").LocalPlayer:GetMouse().KeyDown:Connect(function(keyPressed)
        if keyPressed == string.lower(getgenv().key) then
                pcall(function()
                        if getgenv().toggle == true then
                                getgenv().toggle = false
                                game.StarterGui:SetCore("SendNotification", {
                                        Title = "Axis Anti-Aim",
                                        Text = "AA Enabled" })
                        elseif getgenv().toggle == false then
                                getgenv().toggle = true
                                game.StarterGui:SetCore("SendNotification", {
                                        Title = "Axis Anti-Aim",
                                        Text = "AA Disabled" })
                        end
                end)
        end
end)

if getgenv().velocity == true then
    --[[
 
    Created By Nosssa supports, all hood games!
 
    Roblox Group ( TeamNosss! ): https://www.roblox.com/groups/16003304/TeamNosss#!/about
 
--]]


local Prediction = .18 -- Standard Prediction Value ( Don't recommend to change this since its accurate 95% )

local RunService = game:GetService("RunService")
local PlayersService = game:GetService("Players")
local LocalPlayer = PlayersService.LocalPlayer
local Mouse = LocalPlayer:GetMouse()

Drawing = Drawing

local Square = Drawing.new("Circle")
Square.Visible = true
Square.Filled = true
Square.Thickness = 1
Square.Transparency = 1
Square.Color = Color3.new(0, 166, 255)
Square.Radius = 5

function ShowVelocityOf(User)
	local Camera = game:GetService("Workspace").CurrentCamera
	local Vector, OnScreen = Camera:WorldToViewportPoint(User.Character:FindFirstChild("HumanoidRootPart").Position + (User.Character:FindFirstChild("HumanoidRootPart").AssemblyLinearVelocity * Prediction))
	if OnScreen then
		Square.Radius = 5
		Square.Position = Vector2.new(Vector.X,Vector.Y)
	else
		Square.Radius = 0
	end
end

local Stapel = nil
Stapel = RunService.Heartbeat:Connect(function()
	pcall(function()
		ShowVelocityOf(LocalPlayer)
	end)
end)
end
